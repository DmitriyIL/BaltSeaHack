<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <item name="android:windowFullscreen">true</item>
        <item name="android:colorEdgeEffect">@color/col_edge_effect</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ClearableEditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:backgroundTint">@color/col_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/col_white</item>
        <item name="android:textColorHint">@color/col_white</item>
        <item name="clearIconDrawWhenFocused">false</item>
        <item name="clearIconDrawable">@drawable/ic_btn_delete</item>
        <item name="android:layout_marginStart">64dp</item>
        <item name="android:layout_marginEnd">64dp</item>
        <item name="colorAccent">@color/col_white</item>
        <item name="android:theme">@style/ClearableEditTextStyle</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">#8f94fb</item>
        <item name="android:textColor">@color/col_white</item>
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:fontFamily">@font/proxima_nova_reg</item>
        <item name="colorAccent">@color/col_white</item>
        <item name="android:minHeight">64dp</item>
        <item name="cornerRadius">2dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:colorControlNormal">#66FFFFFF</item>
        <item name="android:colorControlActivated">@color/col_accent</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:fontFamily">@font/proxima_nova_reg</item>
        <item name="colorAccent">@color/col_accent</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/proxima_nova_reg</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TermsOfConditions">
        <item name="android:colorAccent">@color/opacity80</item>
    </style>

    <style name="Text.Bold">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="Text.Bold.Screener">
        <item name="android:fontFamily">@font/proxima_nova_bold</item>
        <item name="android:textColor">@color/col_white</item>
    </style>

</resources>
